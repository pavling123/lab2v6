import re

class iReader:
    def __init__(self, filePath):
        self.filePath = filePath
        
    def swapWords(self, string, numStep):
        if numStep == 6:
            f = 5
        else:
            f = 1
        words = re.sub(r'[^\w\s]', ' ', string).split()
        for i in range(f, len(words), numStep):
            temp = words[i]
            words[i] = words[i - 1]
            words[i - 1] = temp
        return words    
        
    def print(self, words):
        for word in words:
            print(word, end=' ')
    
    def readFile(self):
        try:
            with open(self.filePath, 'r', encoding='utf8') as file:
                string1 = ''
                string2 = ''
                sepFlag = False
                for line in file:
                    for symbol in line:
                        if sepFlag == False:
                            string1 += symbol
                            sepFlag = string1.endswith('000')
                        else:
                            string2 += symbol
                self.print(self.swapWords(string1[0:-3], 2))
                self.print(self.swapWords(string2, 6))
        except FileNotFoundError:
            pass
        except ValueError:
            pass
        
p = iReader('test.txt')
p.readFile()
